

@{
    ViewBag.Title = "Login";
}

<h2>@ViewBag.Title.</h2>
<div class="row">
    <div class="col-md-8">
        <h3>
            Click on the UAEPass Login button.
        </h3>
    </div>
    <div class="col-md-4">
        <section id="socialLoginForm">
            @Html.Partial("_ExternalLoginsListPartial", new { Action = "ExternalLogin", ReturnUrl = ViewBag.ReturnUrl })
        </section>
    </div>
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}